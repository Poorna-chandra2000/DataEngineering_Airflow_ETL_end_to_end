FROM apache/airflow:2.7.1

# Switch to root to install system dependencies
USER root
RUN apt-get update && apt-get install -y gcc libpq-dev && rm -rf /var/lib/apt/lists/*

# Switch to airflow user to install Python packages (required by Airflow image)
USER airflow
RUN pip install --no-cache-dir psycopg2-binary requests pandas sqlalchemy
